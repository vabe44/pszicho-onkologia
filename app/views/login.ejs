<% include partials/login_header %>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal header">
      <div class="content">
        Belépés
      </div>
    </h2>
    <form class="ui large form" id="login" name="login" method="post" action="/login">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="email" placeholder="E-mail cím">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password" placeholder="Jelszó">
          </div>
        </div>
        <div class="ui fluid large teal submit button">Belépés</div>
      </div>

      <div class="ui error message"></div>

    </form>

    <div class="ui message">
      <a href="/signup">Regisztráció</a>
    </div>
  </div>
</div>

